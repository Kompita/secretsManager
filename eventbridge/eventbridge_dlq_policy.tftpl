{
    "Version": "2012-10-17",
    "Id": "sqspolicy",
    "Statement": [
      {
        "Effect": "Allow",
        "Principal": {
          "Service": "events.amazonaws.com"
        },
        "Action": "sqs:SendMessage",
        "Resource": "${RESOURCE_ARN}",
        "Condition": {
          "ArnEquals": {
            "aws:SourceArn": "${SOURCE_ARN}"
          }
        }
      }
    ]
  }